<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Testing Settings UI">

        <EditTextPreference
            app:key="signature"
            app:title="Edit Text Preference"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="reply"
            app:entries="@array/reply_entries"
            app:entryValues="@array/reply_values"
            app:key="reply"
            app:title="List Preference"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Basic Test Settings">

        <SwitchPreferenceCompat
            app:key="switch"
            app:defaultValue="true"
            app:summary="Click to Switch On and Off"
            app:title="Switch Preference" />



    </PreferenceCategory>

</PreferenceScreen>