<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rotateLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    tools:context=".Artwork">

    <LinearLayout
        android:id="@+id/rotateToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-3dp"
        android:layout_marginBottom="-1dp"
        android:background="@color/purple_200"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/rotateLeftBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/ic_rotate_left" />

        <ImageButton
            android:id="@+id/rotateRightBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/ic_rotate_right" />

        <ImageButton
            android:id="@+id/deleteRotateBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/trashcan" />

        <ImageButton
            android:id="@+id/checkRotateBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/ic_check" />


    </LinearLayout>

</RelativeLayout>